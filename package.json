{
  "name": "wikibattle",
  "description": "1v1 races through Wikipedia article links.",
  "version": "1.1.0",
  "license": "MIT",
  "bugs": "https://github.com/goto-bus-stop/WikiBattle/issues",
  "author": "goto-bus-stop <rene@kooi.me>",
  "bin": "bin/wikibattle",
  "dependencies": {
    "JSONStream": "^1.2.1",
    "after": "^0.8.2",
    "cheerio": "^0.22.0",
    "closest": "0.0.1",
    "component-classes": "^1.2.4",
    "component-delegate": "^0.2.3",
    "compression": "^1.6.1",
    "crel": "^3.0.0",
    "crypto-random-string": "^1.0.0",
    "debug": "^3.0.0",
    "dom-event": "^1.0.0",
    "each-async": "^1.1.1",
    "empty-element": "^1.0.0",
    "express": "^4.13.3",
    "inflight": "^1.0.4",
    "make-fetch-happen": "^2.4.13",
    "map-async": "^0.1.1",
    "ms": "^2.0.0",
    "nanobus": "^4.2.0",
    "newless": "^0.3.0",
    "node-schedule": "^1.2.0",
    "random-item": "^1.0.0",
    "serve-static": "^1.10.2",
    "throttleit": "^1.0.0",
    "ws": "^3.0.0",
    "ws-events": "^1.0.0",
    "xhr": "^2.3.3"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-preset-env": "^1.4.0",
    "babelify": "^7.2.0",
    "browser-pack-flat": "^2.3.0",
    "browserify": "^14.0.0",
    "bundle-collapser": "^1.2.1",
    "common-shakeify": "^0.4.0",
    "cssnano-cli": "^1.0.5",
    "html-inline": "^1.2.0",
    "less": "^2.5.3",
    "rimraf": "^2.6.1",
    "standard": "^10.0.0",
    "uglify-js": "^3.0.3",
    "unassertify": "^2.0.4"
  },
  "repository": "goto-bus-stop/WikiBattle",
  "scripts": {
    "start": "bin/wikibattle",
    "lint": "standard src/**/*.js",
    "test": "npm run lint",
    "less": "lessc ./src/client/style.less > ./public/style.css",
    "update": "npm run compile:server && node update.js",
    "compile:server": "babel --out-dir lib src",
    "compile:client": "browserify --debug -g unassertify -t babelify -p common-shakeify -p browser-pack-flat/plugin -e src/client/index.js -o public/app.js",
    "compile": "npm run compile:server && npm run compile:client",
    "minify-wiki-css": "cssnano public/wiki.css public/wiki.css",
    "minify-app-css": "cssnano public/style.css public/style.css",
    "minify-css": "npm run minify-wiki-css && npm run minify-app-css",
    "minify-js": "uglifyjs public/app.js -cmo public/app.js",
    "html": "cp src/client/index.html public/",
    "html-inline": "html-inline -i src/client/index.html -b public/ -o public/index.html && rimraf public/app.js public/style.css public/wiki.css",
    "dev": "npm run compile && npm run less && npm run html",
    "prod": "npm run less && npm run minify-css && npm run compile && npm run minify-js && npm run html-inline",
    "build": "npm run update && npm run prod",
    "prepublish": "npm run build"
  }
}
