{
  "name": "wikibattle",
  "description": "1v1 races through Wikipedia article links.",
  "version": "1.5.0",
  "license": "MIT",
  "bugs": "https://github.com/goto-bus-stop/WikiBattle/issues",
  "author": "Ren√©e Kooi <renee@kooi.me>",
  "bin": "bin/wikibattle",
  "engines": {
    "node": ">= 10.1"
  },
  "dependencies": {
    "@google-cloud/firestore": "^2.0.0",
    "cheerio": "^1.0.0-rc.3",
    "closest": "0.0.1",
    "component-classes": "^1.2.4",
    "component-delegate": "^0.2.3",
    "compression": "^1.7.3",
    "crel": "^3.0.0",
    "crypto-random-string": "^3.0.0",
    "debug": "^4.1.1",
    "dom-event": "^1.0.0",
    "empty-element": "^1.0.0",
    "express": "^4.16.4",
    "make-fetch-happen": "^4.0.0",
    "ms": "^2.1.1",
    "nanobus": "^4.4.0",
    "node-schedule": "^1.3.2",
    "p-event": "^4.1.0",
    "random-item": "^3.0.0",
    "s-ago": "^2.0.1",
    "serve-static": "^1.13.2",
    "throttleit": "^1.0.0",
    "tmp": "0.1.0",
    "ws": "^7.0.0",
    "ws-events": "^1.0.0",
    "xhr": "^2.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "cssnano-cli": "^1.0.5",
    "exorcist": "^1.0.1",
    "less": "^3.9.0",
    "pkg": "^4.3.8",
    "rimraf": "^2.6.3",
    "standard": "^12.0.0",
    "tinyify": "^2.5.0"
  },
  "repository": "goto-bus-stop/WikiBattle",
  "scripts": {
    "start": "bin/wikibattle",
    "lint": "standard",
    "test": "npm run lint",
    "less": "lessc ./src/client/style.less > ./public/style.css",
    "update": "node update.js",
    "compile": "browserify --debug -t babelify -p tinyify -e src/client/index.js | exorcist public/app.js.map > public/app.js",
    "compile:dev": "browserify --debug -t babelify -e src/client/index.js -o public/app.js",
    "minify-wiki-css": "cssnano public/wiki.css public/wiki.css",
    "minify-app-css": "cssnano public/style.css public/style.css",
    "minify-css": "npm run minify-wiki-css && npm run minify-app-css",
    "html": "cp src/client/index.html public/",
    "dev": "npm run compile:dev && npm run less && npm run html",
    "prod": "npm run less && npm run minify-css && npm run compile",
    "build": "npm run update && npm run prod",
    "pkg": "pkg . --out-path dist/",
    "prepare": "npm run build"
  },
  "pkg": {
    "assets": "public/*"
  }
}
